<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".parent.ParentActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#4FBA6F"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:contentDescription="@string/geri"
            android:id="@+id/left_arrow"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="10dp"
            android:src="@drawable/left"
            android:layout_marginVertical="5dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/parentActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp"
            android:maxLines="1"
            android:layout_marginVertical="30dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/left_arrow"
            app:layout_constraintEnd_toStartOf="@id/imgLogOuT"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Ebeveyn Modülü"/>
        <ImageView
            android:id="@+id/imgLogOuT"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:padding="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:onClick="clickLogOut"
            android:background="@drawable/images_shape"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layoutAnimation="@anim/layot_animation_slide_from_right"
        android:scrollbars="vertical"
        android:clipToPadding="false"
        android:id="@+id/recyclerViewParent"
        tools:listitem="@layout/deneme"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:itemCount="2" />

</androidx.appcompat.widget.LinearLayoutCompat>